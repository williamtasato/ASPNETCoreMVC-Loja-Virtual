@model Produto
@{
    ViewData["Title"] = "Atualizar";
}

<h1>Atualizar</h1>

<form method="post">

    <div class="row">
        <div class="form-group col-md-6">
            <label asp-for="CategoriaId"></label>
            <select class="form-control" asp-for="CategoriaId" asp-items="@ViewBag.Categorias">
                <option value="">Selecione</option>
            </select>
            <span asp-validation-for="CategoriaId" class="text-danger"></span>
        </div>

        <div class="form-group col-md-6">
            <label asp-for="Nome"></label>
            <input class="form-control" asp-for="Nome" placeholder="Digite o nome do produto" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Descricao "></label>
        <textarea class="form-control" asp-for="Descricao"></textarea>
        <span asp-validation-for="Descricao" class="text-danger"></span>
    </div>

    <div class="row">
        <div class="form-group col-md-6">
            <label asp-for="Quantidade"></label>
            <div class="input-group mb-2">
                <input class="form-control" type="number" asp-for="Quantidade" placeholder="Digite a quantidade de produtos" />
                <div class="input-group-prepend">
                    <div class="input-group-text">unid</div>
                </div>
            </div>
            <span asp-validation-for="Quantidade" class="text-danger"></span>
        </div>

        <div class="form-group col-md-6">
            <label asp-for="Valor"></label>
            <div class="input-group mb-2">
                <div class="input-group-prepend">
                    <div class="input-group-text">R$</div>
                </div>
                <input class="form-control dinheiro" asp-for="Valor" placeholder="Digite o preço do produto" />
            </div>
            <span asp-validation-for="Valor" class="text-danger"></span>
        </div>
    </div>



    <h2>Frete</h2>

    <div class="row">
        <div class="form-group col-md-3">
            <label asp-for="Peso"></label>
            <div class="input-group mb-2">
                <input class="form-control" asp-for="Peso" />
                <div class="input-group-prepend">
                    <div class="input-group-text">kg</div>
                </div>
            </div>
            <span asp-validation-for="Peso" class="text-danger"></span>
        </div>
        <div class="form-group col-md-3">
            <label asp-for="Largura"></label>
            <div class="input-group mb-2">
                <input class="form-control" type="number" asp-for="Largura" />
                <div class="input-group-prepend">
                    <div class="input-group-text">cm</div>
                </div>
            </div>
            <span asp-validation-for="Largura" class="text-danger"></span>
        </div>
        <div class="form-group col-md-3">
            <label asp-for="Altura"></label>
            <div class="input-group mb-2">
                <input class="form-control" type="number" asp-for="Altura" />
                <div class="input-group-prepend">
                    <div class="input-group-text">cm</div>
                </div>
            </div>
            <span asp-validation-for="Altura" class="text-danger"></span>
        </div>
        <div class="form-group col-md-3">
            <label asp-for="Comprimento"></label>
            <div class="input-group mb-2">
                <input class="form-control" type="number" asp-for="Comprimento" />
                <div class="input-group-prepend">
                    <div class="input-group-text">cm</div>
                </div>
            </div>
            <span asp-validation-for="Comprimento" class="text-danger"></span>
        </div>
    </div>


    @{
        List<Imagem> Imagens = new List<Imagem>();
        if (Model != null)
        {
            Imagens = Model.Imagens.ToList();
        }
    }
    <div class="row Imagens">
        @for (int i = 0; i < 12; i++)
        {
            @if (Imagens.ElementAtOrDefault(i) != null)
            {
                <div class="col-md-2">
                    <input type="file" class="input-file" />
                    <div class="container-img-thumbnail">
                       <span class="helper"></span> <img src="@Imagens.ElementAtOrDefault(i).Caminho" class="img-thumbnail img-upload" />
                    </div>
                            <div class="btn btn-danger btn-imagem-excluir">X</div>
                            <input type="text" name="imagem" value="@Imagens.ElementAtOrDefault(i).Caminho" />
                 </div>
            }
            else
            {
            <div class="col-md-2">
                <input type="file" class="input-file" />
                <div class="container-img-thumbnail">
                    <span class="helper"></span><img src="~/img/imagem-padrao.png" class="img-thumbnail img-upload" />
                </div>
                <div class="btn btn-danger btn-imagem-excluir btn-ocultar">X</div>
                <input type="text" name="imagem" />
            </div>
            }
            }
             </div>

    <button type="submit" class="btn btn-primary">Salvar</button> <a asp-action="Index" class="btn btn-info">Voltar</a>
</form>