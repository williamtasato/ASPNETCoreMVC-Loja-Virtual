@model Colaborador
@{
    ViewData["Title"] = "Cadastrar";
}

<h1>Cadastrar</h1>

<form method="post">
    @*<div asp-validation-summary="All"></div>*@
    <div class="form-group">
        <label asp-for="Nome"></label>
        <input class="form-control" asp-for="Nome" placeholder="Digite o nome do colaborador">
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input class="form-control" asp-for="Email" placeholder="Digite o e-mail do colaborador">
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Salvar</button> <a asp-action="Index" class="btn btn-info">Voltar</a>
</form>

